<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/biru"
    tools:context=".Daftar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:src="@drawable/list"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/btnBekasiUtara"
                android:layout_marginTop="80dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="bekasi utara"/>

            <Button
                android:id="@+id/btnBekasiBarat"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="bekasi barat"/>

            <Button
                android:id="@+id/btnBekasiTimur"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="bekasi timur"/>

            <Button
                android:id="@+id/btnBekasiSelatan"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="bekasi selatan"/>

            <Button
                android:id="@+id/btnPondokGede"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="pondok gede"/>

            <Button
                android:id="@+id/btnPondokMelati"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="pondok melati"/>

            <Button
                android:id="@+id/btnRawalumbu"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="rawalumbu"/>

            <Button
                android:id="@+id/btnJatiasih"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="jatiasih"/>

            <Button
                android:id="@+id/btnJatisampurna"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="jatisampurna"/>

            <TextView
                android:layout_marginTop="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="#73b6f4"/>


        </LinearLayout>


    </LinearLayout>

</ScrollView>